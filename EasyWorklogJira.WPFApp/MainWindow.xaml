<Window x:Class="EasyWorklogJira.WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyWorklogJira.WPFApp"
        mc:Ignorable="d"
        Title="Easy Worklog Jira"
        Height="600"
        Width="350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <Grid Background="Silver">

        <DockPanel VerticalAlignment="Top" Height="40" Background="#0078D7">

        </DockPanel>

        <!-- Conteúdo principal -->
        <ContentControl x:Name="MainContent" />

        <!--Menu ninferior-->
        <DockPanel VerticalAlignment="Bottom" Height="40" Background="#FFF0F0F0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="buttonIssueCalendar" Click="buttonIssueCalendar_Click" Margin="20,0" Background="Transparent" BorderThickness="0">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="📆" FontSize="24" HorizontalAlignment="Center" ToolTip="Calendário" />
                    </StackPanel>
                </Button>

                <Button x:Name="buttonAdd" Click="buttonNew_Click" Margin="20,0" Background="Transparent" BorderThickness="0">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="💾" FontSize="24" HorizontalAlignment="Center" ToolTip="Adicionar registro de atividade"></TextBlock>
                    </StackPanel>
                </Button>

                <Button x:Name="buttonHome" Click="buttonHome_Click" Margin="20,0" Background="Transparent" BorderThickness="0">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="✅" FontSize="24" HorizontalAlignment="Center" ToolTip="Registro de atividades"/>
                    </StackPanel>
                </Button>

                <Button x:Name="buttonSettings" Click="buttonSettings_Click" Margin="20,0" Background="Transparent" BorderThickness="0">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="⚙️" FontSize="24" HorizontalAlignment="Center" ToolTip="Configurações"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>
    </Grid>

</Window>
