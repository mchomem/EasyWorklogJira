<Window x:Class="EasyWorklogJira.WPFApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyWorklogJira.WPFApp.Views"
        mc:Ignorable="d"
        Title="Easy Worklog Jira"
        Height="560"
        Width="312"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Grid Background="Silver">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" /><!-- Custom top bar -->
            <RowDefinition Height="*" /><!-- Conteúdo (worklog's - registros de atividades) -->
            <RowDefinition Height="40" /><!-- Menu inferior -->
        </Grid.RowDefinitions>

        <!-- Custom top bar -->
        <Grid VerticalAlignment="Top" Height="40" Background="Black" MouseDown="Grid_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="TextBlockDateTimeNow"
                Text="..."
                FontWeight="Bold"
                FontSize="16"
                Margin="10,10,0,0"
                Foreground="White"></TextBlock>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button
                    x:Name="buttonMinimize"
                    BorderBrush="Transparent"
                    Content="—"
                    Click="ButtonMinimize_Click"
                    Background="Transparent"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    ToolTip="Minimizar"
                    Width="40" />
                <Button
                    x:Name="buttonClose"
                    BorderBrush="Transparent"
                    Content="❌"
                    Click="ButtonClose_Click"
                    Background="Transparent"
                    FontSize="24"
                    Foreground="White"
                    ToolTip="Fechar"
                    Width="40" />
            </StackPanel>
        </Grid>

        <!-- Conteúdo principal -->
        <!--<ContentControl Grid.Row="1" x:Name="MainContent" />-->

        <!--Worklog's list-->
        <local:WorklogListingUserController
            Grid.Row="1"
            x:Name="worklogListingUserController" />

        <!-- Menu inferior -->
        <DockPanel Grid.Row="2" VerticalAlignment="Bottom" Height="40" Background="#FFF0F0F0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="buttonIssueCalendar" Click="buttonGetCalendar_Click" Margin="20,0" Background="Transparent" BorderThickness="0">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="📆" FontSize="24" HorizontalAlignment="Center" ToolTip="Calendário" />
                    </StackPanel>
                </Button>

                <Button x:Name="buttonAdd" Click="buttonNew_Click" Margin="20,0" Background="Transparent" BorderThickness="0">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="➕" FontSize="24" HorizontalAlignment="Center" ToolTip="Adicionar registro de atividade"></TextBlock>
                    </StackPanel>
                </Button>

                <Button x:Name="buttonHome" Click="buttonIssueLiesting_Click" Margin="20,0" Background="Transparent" BorderThickness="0">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="✅" FontSize="24" HorizontalAlignment="Center" ToolTip="Registro de atividades"/>
                    </StackPanel>
                </Button>

                <Button x:Name="buttonSettings" Click="buttonConfiguration_Click" Margin="20,0" Background="Transparent" BorderThickness="0">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="⚙️" FontSize="24" HorizontalAlignment="Center" ToolTip="Configurações"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>
    </Grid>

</Window>
