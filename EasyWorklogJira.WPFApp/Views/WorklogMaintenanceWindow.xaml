<Window x:Class="EasyWorklogJira.WPFApp.Views.WorklogMaintenanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyWorklogJira.WPFApp.Views" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="Registro de tarefas" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Content="Tarefa:" />

        <ComboBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            Name="comboBoxTask"
            IsEditable="False"
            IsTextSearchEnabled="False"
            StaysOpenOnEdit="True"
            Height="25"/>

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Content="Data:" />

        <DatePicker
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            Name="datePickerWorklogDate"
            Height="25"
            Width="100"
            HorizontalAlignment="Left"/>

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Content="Hora inicial:" />

        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Orientation="Horizontal">
            <xctk:MaskedTextBox
                x:Name="maskedTextBoxStartTime"
                Height="25"
                Width="35"
                Margin="5"
                Mask="00:00"
                PromptChar="_" />
            
            <Label Content="Hora final:"/>
            
            <xctk:MaskedTextBox
                x:Name="maskedTextBoxEndTime"
                Height="25"
                Width="35"
                Margin="5"
                Mask="00:00"
                PromptChar="_" />            
        </StackPanel>

        <Label
            Grid.Row="3"
            Grid.Column="0"
            Content="Tempo gasto:" />

        <xctk:MaskedTextBox
            x:Name="maskedTextBoxTimeSpent"
            Grid.Row="3"
            Grid.Column="1"
            Height="25"
            Width="35"
            Margin="5"
            Mask="00:00"
            PromptChar="_"
            HorizontalAlignment="Left"/>

        <Label
            Grid.Row="4"
            Grid.Column="0"
            Content="Descrição da atividade:"/>

        <TextBox
            x:Name="textBoxIssueDescription"
            Grid.Row="4"
            Grid.Column="1"
            Height="70"
            Margin="5"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled"/>

        <StackPanel
            Grid.Row="5"
            Grid.Column="1"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <Button
                x:Name="ButtonClose"
                Height="25"
                Width="80"
                Background="White"
                Content="Fechar"
                FontWeight="Bold"
                Foreground="Black"
                Margin="5"
                Click="ButtonClose_Click"/>

            <Button
                x:Name="ButtonSave"
                Height="25"
                Width="80"
                Background="Black"
                Content="Salvar"
                FontWeight="Bold"
                Foreground="White"
                Margin="5"
                HorizontalAlignment="Right"
                Click="ButtonSave_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
